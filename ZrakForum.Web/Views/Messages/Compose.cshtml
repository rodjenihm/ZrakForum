@model ZrakForum.Web.Dto.MessageComposeDto

@{
    ViewData["Title"] = "Slanje poruke";
}

<h1>Pošalji poruku korisniku @@@ViewBag.SendTo</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <p class="text-danger">@ViewBag.Error</p>
        <form asp-action="Send">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Subject" class="control-label"></label>
                <input asp-for="Subject" class="form-control" />
                <span asp-validation-for="Subject" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Text" class="control-label"></label>
                <textarea asp-for="Text" class="form-control"></textarea>
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>
            <input name="sendTo" value="@ViewBag.SendTo" hidden />
            <div class="form-group">
                <input type="submit" value="Pošalji poruku" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
